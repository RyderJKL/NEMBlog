<%- include header %>
<% posts.forEach(function (post, index){ %>
<div class="well">

    <div class="navbar-left">
        <p class="navbar-header">
            <a href="/u/<%= post.name %>/<%= post.time
                    .day %>/<%= post.title %>"><%=
                    post.title %></a>
        </p>
    </div>

    <div class="navbar-text">
        <p><%- post.post %></p>
    </div>

    <div class="navbar-text">
        <p
                class="page-header">
            本文阅读量:<%= post.pv%>
            评论:<%= post.comments.length%>
            转载: <% if (post
                            .reprint_info.reprint_to) {%>
            <%= post.reprint_info
                    .reprint_to.length%>
            <% } else {%>
            <%= 0%>
            <% }%>
        </p>
    </div>

    <p class="info">
        <% if (post.reprint_info.reprint_from){%>
        <a href="/u/<%= post.reprint_info.reprint_from.name%>/<%= post.reprint_info.reprint_from.day%>/<%= post.reprint_info
                .reprint_from
                .title%>">原文链接</a>
        <%}%>
    </p>

    <div class="navbar-link">
        作者： <a href="/u/<%= post.name %>"><%=
                post.name
            %></a>
        <a href="/u/<%= post.name%>"><img
                    src="<%= post.head%>"
                    class="r_read"
                                          alt=""></a>
        日期: <%= post.time.minute %>
        <% post.tags.forEach(function
                (tag, index) { %>
        <% if (tag) {%>
        <a href="/tags/<%= tag%>"><span
                    class="label
                            label-info"><%= tag
                %></span></a>
        <% }%>
        <% })%>
    </div>
</div>


<% }) %>
<%- include paging%>
<%- include footer %>