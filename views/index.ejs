<%- include header %>
        <div class="panel panel-info">
            <% posts.forEach(function (post, index) { %>
            <p class="panel-heading"><a
                        href="/u/<%= post
                                .name%>/<%=
                            post.time.day%>/<%= post.title%>"><%= post
                            .title%></a></p>
            <p class="panel-body"><%- post.post
                %></p>

            <p class="info">
                <% if (post.reprint_info.reprint_from){%>
                <a href="/u/<%= post.reprint_info.reprint_from.name%>/<%= post.reprint_info.reprint_from.day%>/<%= post.reprint_info
                        .reprint_from
                        .title%>">原文链接</a>
                <%}%>
            </p>


            <div class="navbar-text">

                <p
                        class="page-header">
                    本文阅读量:<%= post.pv%>
                    评论:<%= post.comments.length%>
                    转载: <% if (post
                                    .reprint_info.reprint_to) {%>
                    <%= post.reprint_info
                            .reprint_to.length%>
                    <% } else {%>
                    <%= 0%>
                    <% }%>
                </p>
            </div>

            <p class="panel-footer">
                作者:
                <a href="/u/<%= post.name %>"><%= post.name %></a>
                <a href="/u/<%= post
                        .name%>"><img src="<%=
                        post.head%>"
                                      class="r_head"
                                      alt=""></a>
                日期: <%= post.time.minute %>
                <% post.tags.forEach(function
                        (tag, index) { %>
                <% if (tag) {%>
                <a href="/tags/<%= tag%>"><span
                            class="label
                            label-info"><%= tag
 %></span></a>
                <% }%>
                <% })%>
            </p>

            <% }) %>
        </div>


</div>

<%- include paging%>

<%- include footer %>