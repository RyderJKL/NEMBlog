<%- include header%>
<section class="section-article">

    <p>
        <% if (user && (user.name == post.name)
    // 通过 session
        // 检测用户是否存在，若存在且和当前的用户名一样，则显示编辑和删除按钮
        ) {%>
        <span><a href="/edit/<%= post.name%>/<%= post.time.day%>/<%= post.title%>" class="edit">编辑</a></span>
        <span><a href="/remove/<%= post.name%>/<%= post.time.day%>/<%= post.title%>" class="edit">删除</a></span>
        <%}%>
    </p>
    <p class="info">
        作者: <a href="/u/<%= post.name%>"><%=
            post.name
            %></a>
        日期: <%= post.time.minute%>
    </p>
    <p><%- post.post%></p>
</section>
<%- include footer%>